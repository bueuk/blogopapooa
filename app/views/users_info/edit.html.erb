<% if current_user.admin? %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Edit</h2>

    <%= form_for @user, url: users_info_path(@user) do|f| %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: "form-control btn btn-primary" %>
      </div>

    <% end %>

    <h3>Remove account</h3>

    <p>Are you sure remove this account? <%= button_to "Remove account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: "form-control btn btn-primary" %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
<% else %>
  <h2>You dont have permission to access this page <i class="fab fa-earlybirds"></i></h2>
<% end %>
